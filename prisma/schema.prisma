generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @unique
  email String @unique
  name String?
  image         String?
  admin         Boolean      @default(false)
  password String?
  Gist  Gist[]
  GistUrl GistUrl[]
    Comments  Comment[]
    Starred  Starred[]
  createAt DateTime @default(now())


}

model Gist {
  id Int @id @default(autoincrement())
  
  description String?
  fileName String?
  code String
  explaination String?
  access Access
  userId String
  url GistUrl[]
  User User @relation(fields: [userId],references: [id])
   comments     Comment[]
   Starred Starred[]
  createdAt          DateTime         @default(now())

}

model GistUrl{
  id Int @id @default(autoincrement())
  userId String
  gistId Int
  User User @relation(fields: [userId],references: [id])
  Gist Gist @relation(fields: [gistId],references: [id])
  url String?
  createdAt DateTime @default(now())
  
  Access Access
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  userId    String
  gistId    Int
  User      User     @relation(fields: [userId],references: [id])
  Gist      Gist     @relation(fields: [gistId],references: [id])
  createdAt DateTime @default(now())
}

model Starred {
  id Int @id @default(autoincrement())
  gistId Int
  userId String
  starred Boolean @default(false)
  Gist Gist  @relation(fields: [gistId] , references: [id])
  User User @relation(fields: [userId] , references: [id])
  
}
enum Access{
    Private
    Public
}